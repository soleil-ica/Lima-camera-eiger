                                <directory>${FL-64bits-libs}/hdf5-1.8.16/lib</directory>
                            </lib>
                            <lib>
                                <!-- hdf5 (1.8.16) 64 -->
                                <name>hdf5_hl</name>
                                <type>shared</type>
                                <directory>${FL-64bits-libs}/hdf5-1.8.16/lib</directory>
                            </lib>
                            <lib>
