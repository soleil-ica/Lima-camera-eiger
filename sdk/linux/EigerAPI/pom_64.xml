                                <type>shared</type>
                                <directory>${FL-64bits-libs}/hdf5-1.8.16/lib</directory>
                            </lib>
                        </libs>			
                    </linker>
                </configuration>
            </plugin>
            <plugin>
                <groupId>fr.soleil.maven.plugins</groupId>
                <artifactId>maven-check-plugin</artifactId>
                <configuration>
                    <enable>false</enable>
                </configuration>
            </plugin>
        </plugins>
    </build>

