                                <name>curl</name>
                                <type>shared</type>
                                <directory>/home/informatique/ica/langlois/DEV/dev/curl-7.37.0/lib/.libs</directory>
                            </lib>
                            <lib>
                                <!-- hdf5 (1.8.16) 64 -->
                                <name>hdf5</name>
                                <type>shared</type>
                                <directory>${FL-64bits-libs}/hdf5-1.8.16/lib</directory>
                            </lib>
                            <lib>
